<div class="wrappingdiv">
    <div class="self">
        <div class="persona persona-xl self">
            <div class="note-c">
                <div id="txt-note" class="editable" contenteditable="true"
                     placeholder="{{# str }} status_placeholder, block_skypeweb {{/ str }}"></div>
                <div class="tick"></div>
            </div>
            <div class="photo-c">
                {{# pix }} default, block_skypeweb, Default Image {{/ pix}}
                <div class="photo-presence"></div>
            </div>
            <div class="detail">
                <div id="self-name" class="primary"></div>
                <select id="sel-presence" class="secondary">
                    <option value="Online">{{# str }} option_available, block_skypeweb {{/ str }}</option>
                    <option value="Busy">{{# str }} option_busy, block_skypeweb {{/ str }}</option>
                    <option value="DoNotDisturb">{{# str }} option_disturb, block_skypeweb {{/ str }}</option>
                    <option value="BeRightBack">{{# str }} option_back, block_skypeweb {{/ str }}</option>
                    <option value="Away">{{# str }} option_away, block_skypeweb {{/ str }}</option>
                </select>
                <div id="self-location" class="editable tertiary" contenteditable="true"
                     placeholder="{{# str}} location_placeholder, block_skypeweb {{/ str }}"></div>
            </div>
        </div>
    </div>
